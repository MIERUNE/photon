{
	"analysis": {
		"analyzer": {
			"index_ngram": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"tokenizer": "edge_ngram",
				"filter": [
					"preserving_word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				]
			},
			"search_ngram": {
				"char_filter": [
					"punctuationgreedy"
				],
				"tokenizer": "standard",
				"filter": [
					"lowercase",
					"german_normalization",
					"asciifolding"
				]
			},
			"index_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"search_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"index_housenumber": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"filter": [
					"lowercase",
					"preserving_word_delimiter"],
				"tokenizer": "standard" 
			},
			"synonym_analyzer": {
				"tokenizer": "standard",
				"filter": [
					"lowercase",
					"synonym_filter"
				],
				"expand": false
			}
		},
		"tokenizer": {
			"edge_ngram": {
				"type": "edge_ngram",
				"min_gram": 1,
				"max_gram": 100,
				"token_chars": [
					"letter",
					"digit"
				]
			}
		},
		"char_filter": {
			"punctuationgreedy": {
				"type": "pattern_replace",
				"pattern": "[\\.,']",
				"replacement": " "
			},
			"remove_ws_hnr_suffix": {
				"type": "pattern_replace",
				"pattern": "(\\d+)\\s(?=\\p{L}\\b)",
				"replacement": "$1"
			}
		},
		"filter": {
			"photonlength": {
				"min": "2",
				"type": "length"
			},
			"preserving_word_delimiter": { 
				"type": "word_delimiter",
				"preserve_original": "true"
			},
			"synonym_filter": {
				"type": "synonym",
				"synonyms": [
					"international airport, airport, aeroway, aerodrome",
					"school, high school, institute, university, polytechnic, campus, primary school, education board, college, academy, kindergarten, integrated polytechnic regional college",
					"sector office, cell office, province office, office, district office",
					"museum, memorial, art museum, art, arts_center",
					"centre de sante, hospital, hopital, clinique, clinic, polyclinique, health center",
					"stadium, arena, sports_centre, swimming_pool",
					"market, shop, bar, supermarket, mini market, store, marketplace",
					"papeterie, library, public library, books, copyshop",
					"assembly, church, mosque, seminaire, eglise, catholique, catholic, synagogue",
					"commission, embassy, high commission",
					"river, lake, water well, water_well, wetland, sea",
					"park, forest, volcano, natural, rock",
					"bus_stop, bus_station, bus stop, bus station, taxi, taxi park, bus, station, stop, subway, bus_guideway, motorcycle_parking, parking",
					"road, primary, secondary, highway, footway, railway, taxiway"
				]
						}
		}
	}
}
