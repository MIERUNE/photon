{
	"analysis": {
		"analyzer": {
			"ja_kuromoji_index_analyzer": {
				"type": "custom",
				"char_filter": [
					"normalize"
				],
				"tokenizer": "ja_kuromoji_tokenizer",
				"filter": [
					"kuromoji_baseform",
					"kuromoji_part_of_speech",
					"ja_index_synonym",
					"cjk_width",
					"ja_stop",
					"kuromoji_stemmer",
					"lowercase"
				]
			},
			"ja_kuromoji_search_analyzer": {
				"type": "custom",
				"char_filter": [
					"normalize"
				],
				"tokenizer": "ja_kuromoji_tokenizer",
				"filter": [
					"kuromoji_baseform",
					"kuromoji_part_of_speech",
					"ja_search_synonym",
					"cjk_width",
					"ja_stop",
					"kuromoji_stemmer",
					"lowercase"
				]
			},
			"ja_ngram_index_analyzer": {
				"type": "custom",
				"char_filter": [
					"normalize"
				],
				"tokenizer": "ja_ngram_tokenizer",
				"filter": [
					"lowercase"
				]
			},
			"ja_ngram_search_analyzer": {
				"type": "custom",
				"char_filter": [
					"normalize"
				],
				"tokenizer": "ja_ngram_tokenizer",
				"filter": [
					"ja_search_synonym",
					"lowercase"
				]
			},
			"index_ngram": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"tokenizer": "edge_ngram",
				"filter": [
					"preserving_word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				]
			},
			"search_ngram": {
				"char_filter": [
					"punctuationgreedy"
				],
				"tokenizer": "standard",
				"filter": [
					"lowercase",
					"german_normalization",
					"asciifolding"
				]
			},
			"index_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"search_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"index_housenumber": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"filter": [
					"lowercase",
					"preserving_word_delimiter"
				],
				"tokenizer": "standard"
			}
		},
		"tokenizer": {
			"edge_ngram": {
				"type": "edge_ngram",
				"min_gram": 1,
				"max_gram": 100,
				"token_chars": [
					"letter",
					"digit"
				]
			},
			"ja_kuromoji_tokenizer": {
				"mode": "search",
				"type": "kuromoji_tokenizer",
				"discard_compound_token": true,
				"user_dictionary_rules": [
					"東京スカイツリー,東京 スカイツリー,トウキョウ スカイツリー,カスタム名詞"
				]
			},
			"ja_ngram_tokenizer": {
				"type": "ngram",
				"min_gram": 2,
				"max_gram": 3,
				"token_chars": [
					"letter",
					"digit"
				]
			}
		},
		"char_filter": {
			"punctuationgreedy": {
				"type": "pattern_replace",
				"pattern": "[\\.,']",
				"replacement": " "
			},
			"remove_ws_hnr_suffix": {
				"type": "pattern_replace",
				"pattern": "(\\d+)\\s(?=\\p{L}\\b)",
				"replacement": "$1"
			},
			"normalize": {
				"type": "icu_normalizer",
				"name": "nfkc",
				"mode": "compose"
			}
		},
		"filter": {
			"photonlength": {
				"min": "2",
				"type": "length"
			},
			"preserving_word_delimiter": {
				"type": "word_delimiter",
				"preserve_original": "true"
			},
			"ja_index_synonym": {
				"type": "synonym",
				"lenient": true,
				"synonyms": [
					"米国, アメリカ",
					"東京大学, 東大"
				]
			},
			"ja_search_synonym": {
				"type": "synonym_graph",
				"lenient": true,
				"synonyms":[
					"米国, アメリカ",
					"東京大学, 東大"
				]
			}
		}
	}
}